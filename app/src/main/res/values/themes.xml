<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DialogSelectImage" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorBackgroundFloating">#FFFFFF</item>
        <item name="colorError">#B00020</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="theme">@style/Theme.DialogSelectImage</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

</resources>